.mainMsg{
  position: fixed;
  height: 100%;
  width: 100%;
  font-size: 32rpx;
}
.loginIcon{
  width: 182rpx;
  height: 134rpx;
  margin: 68rpx auto;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.bindMobileTips{
  margin-top: 80rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center; 
  background:rgba(238,238,238,0.5);
  border-radius:30rpx;
  border:2rpx solid rgba(238,238,238,1);  
  margin: 0rpx 66rpx;                                 
}
.bindMobileTips text:nth-child(1){color: #F5A019;}
.bindMobileTips text:nth-child(2){color: #000000;}
.bindMobileTips text:nth-child(3){color: #000000;font-weight: bold;}
.VerificationCodeLogin,button,button[plain],.button-hover[plain] {
  height:80rpx;
  line-height: 80rpx;
  background:rgba(245,160,25,1);
  border-radius:8rpx;
  color: #fff;
  margin-top: 100rpx;
  text-align: center;
  margin: 50rpx 66rpx 0px 66rpx;
  border: none;
  font-size: 32rpx;
}
.VerificationCodeLogin::after {
  border-color: transparent;
}
.UserAgreement{
  font-size: 28rpx;
  color: #000000;
  text-align: center;
  margin-top: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.selectBox{
  display: inline-block;
}
.selectBox image{
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  position: relative;
  top: 4rpx;
  margin-right: 8rpx;
}
.inputBox {
  margin: 36rpx 66rpx 0rpx 66rpx;
  display: flex;
  border-bottom: 2rpx solid #999999;
  height: 96rpx;
  line-height: 96rpx;
}
.inputBox .input {
  flex: 1;       
}
.inputBox .input input{
  width: 100%;
  height: 100%;
}
.VerificationCode{
  padding-left: 20rpx;
  color: #00468E;
  position: relative;
  font-size: 32rpx;
  color: #00468E;
}
.VerificationCode::before{
  content: "";
  display: inline-block;
  width:2rpx;
  height:28rpx;
  background:rgba(153,153,153,1);
  position: absolute;
  left: 0px;
  top: 36rpx;
}