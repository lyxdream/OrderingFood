/* pages/order/order.wxss */

.font30{
  font-size: 30rpx;
}
.color3{
  color:#f00;
}
.bgWhite{
  background-color:#fff;
}
/* ----------------------以上是公共样式--------------------- */
page{
  height:100%;
  width:100%;
}
.home-box{
  height:100%;
  width:100%;
  display: flex;
  background-color: #ddd;
  overflow: hidden;
  flex-direction: column;
}
.home-head{
  height: 200rpx;
  width:100%;
  background:gray;
}

/* 列表部分 */
.cont-pro {
  height: 100%;
  display: flex;
  background-color: #fff;
  overflow: hidden;
}
/* 左边部分 */
.pro-left {
  width: 160rpx;
  flex-basis: 160rpx;
  background-color: #f6f6f6;
  overflow-y: scroll;
  padding-bottom:150rpx;    
  /* 处理列表显示不全的问题 */
  box-sizing: border-box;
}
.pro-title {
  width: 100%;
  /* height: 100rpx; */
  /* line-height: 100rpx; */
  padding:40rpx 10rpx;
  text-align: center;
  box-sizing: border-box;
}
/* 右边部分 */
.right-box{
  flex: 1;
  height:100%;
  display: flex;
  flex-direction: column;
}
.pro-right {
  width:100%;
  flex: 1;
  background-color: #fff;
  overflow-y: scroll;
  padding-bottom:150rpx;    
  /* 处理列表显示不全的问题 */
  box-sizing: border-box;
}
.item-title {
  width: 100%;
  height: 50px;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}




